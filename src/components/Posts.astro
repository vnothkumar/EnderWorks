---
interface Props {
  posts: {
    id: string;
    slug: string;
    data: {
      title: string;
      images: string[];
      description?: string;
      created_at: Date;
      tags?: string[];
      price?: number | string;
    };
  }[];
}
import { format } from "timeago.js";

const { posts } = Astro.props as Props;
---

<div class="w-full px-4 lg:px-8">
  <ul
    class="post-list w-full grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 2xl:grid-cols-6 gap-4 lg:gap-6"
  >
    {
      posts.map((post) => (
        <li class="post-item group h-full">
          <div class="card bg-base-100 w-full h-full shadow-md hover:shadow-xl border border-base-200 hover:border-primary/30 flex flex-col rounded-2xl overflow-hidden transition-all duration-300 hover:-translate-y-1">
            <figure class="relative group w-full h-[200px] flex-shrink-0 overflow-hidden">
              {/* Blurry background */}
              <div
                class="absolute inset-0 bg-cover bg-center filter blur-sm scale-110"
                style={{ backgroundImage: `url(${post.data.images[0]})` }}
              />
              <img
                src={post.data.images[0]}
                alt={post.data.title}
                class="relative w-full h-full object-contain transition-transform duration-300 group-hover:scale-105"
                onerror="this.onerror=null; this.src='https://placehold.co/600x350?text=Product';"
              />
              <a href={`/products/${post.id}`}>
                <div class="absolute inset-0 flex items-center justify-center bg-black/0 group-hover:bg-black/50 transition-all duration-300">
                  <span class="text-white font-bold text-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 px-4 py-2 bg-primary rounded-full">View Product</span>
                </div>
              </a>
            </figure>

            <div class="card-body flex flex-col p-4 gap-2 min-h-[120px]">
              <a href={`/products/${post.id}`} class="hover:text-primary transition-colors">
                <h2 class="card-title text-base lg:text-lg font-bold line-clamp-2">
                  {post.data.title}
                </h2>
              </a>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-1">
                  {post.data.tags.slice(0, 2).map((tag) => (
                    <span class="badge badge-sm badge-ghost text-xs">{tag}</span>
                  ))}
                </div>
              )}
              <time class="post-date text-sm text-base-content/60 mt-auto" datetime={post.data.created_at.toISOString()}>
                {new Date(post.data.created_at).toLocaleDateString("en-GB", {
                  day: "2-digit",
                  month: "short",
                  year: "numeric"
                })}
              </time>
            </div>
          </div>
        </li>
      ))
    }
  </ul>
</div>

