---
interface Props {
  posts: {
    id: string;
    slug: string;
    data: {
      title: string;
      images: string[];
      description?: string;
      created_at: Date;
      tags?: string[];
      price?: number | string;
    };
  }[];
}
import { format } from "timeago.js";

const { posts } = Astro.props as Props;
---

<div class="">
  <ul
    class="post-list w-full grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6 p-4 md:p-6"
  >
    {
      posts.map((post) => (
        <li class="post-item border-base-200 border shadow-sm flex flex-col">
          <div class="card bg-base-100 w-full shadow-sm flex flex-col flex-grow">
            <figure class="relative group w-full h-[250px] overflow-hidden">
              {/* Blurry background */}
              <div
                class="absolute inset-0 bg-cover bg-center filter blur-sm scale-110"
                style={{ backgroundImage: `url(${post.data.images[0]})` }}
              />
              <img
                src={post.data.images[0]}
                alt={post.data.title}
                class="relative w-full h-[250px] object-contain"
                onerror="this.onerror=null; this.src='https://placehold.co/600x350?text=Product';"
              />
              <a href={`/products/${post.id}`}>
                <div class="absolute inset-0 flex items-center justify-center bg-black opacity-0 group-hover:opacity-60 group-hover:cursor-pointer transition-opacity duration-300">
                  <span class="text-white font-bold text-lg">View Product</span>
                </div>
              </a>
            </figure>

            <div class="card-body flex flex-col flex-grow p-4">
              <a href={`/products/${post.id}`}>
                <h2 class="card-title text-lg font-bold line-clamp-2">
                  {post.data.title}
                </h2>
              </a>
             
              <time class="post-date" datetime={post.data.created_at.toISOString()}>
  {new Date(post.data.created_at).toLocaleDateString("en-GB", {
    day: "2-digit",
    month: "short",
    year: "numeric"
  })}
</time>
            </div>
          </div>
        </li>
      ))
    }
  </ul>
</div>
