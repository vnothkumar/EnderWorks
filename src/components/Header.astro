---
import { SITE_TITLE } from "../consts";
import ProductSearch from "./SearchProduct";

const categories = [
  { name: "Rifles", slug: "rifle", icon: "üî´" },
  { name: "Tactical", slug: "tactical", icon: "üéñÔ∏è" },
  { name: "Weapons", slug: "weapon", icon: "‚öîÔ∏è" },
];
---
<header class="bg-base-100/80 backdrop-blur-xl shadow-xl sticky top-0 z-50 border-b border-base-300/50">
  <div class="navbar w-full px-4 lg:px-8 py-3">
    <div class="navbar-start">
      <!-- Mobile hamburger + drawer -->
      <div class="drawer lg:hidden">
        <input id="mobile-drawer" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content">
          <label for="mobile-drawer" class="btn btn-ghost btn-square hover:bg-base-200/50 rounded-2xl" aria-label="Open menu">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
          </label>
        </div>
        <div class="drawer-side z-[200]">
          <label for="mobile-drawer" aria-label="close sidebar" class="drawer-overlay bg-black/50"></label>
          <aside class="bg-base-100 min-h-full w-80 flex flex-col shadow-2xl">
            <!-- Header -->
            <div class="flex justify-between items-center p-6 border-b border-base-200">
              <span class="text-2xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">Enderworks</span>
              <label for="mobile-drawer" class="btn btn-ghost btn-sm btn-circle">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </label>
            </div>
            
            <!-- Navigation -->
            <nav class="flex-1 p-4 overflow-y-auto">
              <ul class="space-y-1">
                <li>
                  <a href="/" class="flex items-center gap-3 px-4 py-3 rounded-xl text-base font-medium hover:bg-primary/10 transition-colors">
                    <span class="text-xl">üè†</span> Home
                  </a>
                </li>
                <li>
                  <a href="/about" class="flex items-center gap-3 px-4 py-3 rounded-xl text-base font-medium hover:bg-primary/10 transition-colors">
                    <span class="text-xl">‚ÑπÔ∏è</span> About
                  </a>
                </li>
              </ul>
              
              <!-- Categories Section -->
              <div class="mt-8 mb-4">
                <div class="flex items-center gap-2 px-4 mb-4">
                  <div class="h-px flex-1 bg-base-300"></div>
                  <span class="text-xs font-bold uppercase tracking-widest text-base-content/40">Categories</span>
                  <div class="h-px flex-1 bg-base-300"></div>
                </div>
                
                <div class="grid grid-cols-1 gap-2">
                  {categories.map((cat) => (
                    <a href={`/${cat.slug}/`} class="group flex items-center gap-4 p-4 rounded-2xl bg-base-200/50 hover:bg-primary hover:text-primary-content border border-base-300/50 hover:border-primary transition-all duration-300">
                      <span class="text-2xl p-2 bg-base-100 group-hover:bg-primary-content/20 rounded-xl transition-colors">{cat.icon}</span>
                      <div>
                        <span class="font-semibold text-base">{cat.name}</span>
                        <p class="text-xs text-base-content/60 group-hover:text-primary-content/80">Browse {cat.name.toLowerCase()}</p>
                      </div>
                      <svg class="w-5 h-5 ml-auto opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  ))}
                </div>
              </div>
            </nav>
          </aside>
        </div>
      </div>
      
      <!-- Logo - directly after hamburger -->
      <a class="btn btn-ghost text-lg lg:text-2xl font-bold tracking-tight hover:bg-transparent px-2" href="/">
        <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">Enderworks</span>
      </a>
    </div>
    
    <!-- Desktop Navigation with Categories dropdown -->
    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal gap-1">
        <li><a href="/" class="font-medium px-4 py-2 rounded-full hover:bg-primary hover:text-primary-content transition-all">Home</a></li>
        <li>
          <details class="dropdown">
            <summary class="font-medium px-4 py-2 rounded-full hover:bg-primary hover:text-primary-content transition-all cursor-pointer">Categories</summary>
            <ul class="dropdown-content mt-2 z-[100] p-2 shadow-xl bg-base-100 rounded-2xl w-56 border border-base-200">
              {categories.map((cat) => (
                <li>
                  <a href={`/${cat.slug}/`} class="flex items-center gap-3 py-3 px-4 rounded-xl hover:bg-primary hover:text-primary-content transition-all">
                    <span class="text-lg">{cat.icon}</span> {cat.name}
                  </a>
                </li>
              ))}
            </ul>
          </details>
        </li>
        <li><a href="/about" class="font-medium px-4 py-2 rounded-full hover:bg-primary hover:text-primary-content transition-all">About</a></li>
      </ul>
    </div>
    
    <div class="navbar-end gap-2">
      <ProductSearch client:only="react" />
    </div>
  </div>
</header>

<script>
  // Close dropdown when clicking outside
  document.addEventListener('mousedown', (e) => {
    const details = document.querySelectorAll('details.dropdown');
    details.forEach((detail) => {
      const summary = detail.querySelector('summary');
      // If click is not on the details element or its children, close it
      if (!detail.contains(e.target)) {
        detail.removeAttribute('open');
      }
    });
  });
  
  // Prevent dropdown from closing when clicking inside
  document.querySelectorAll('details.dropdown').forEach((detail) => {
    detail.addEventListener('click', (e) => {
      e.stopPropagation();
    });
  });
</script>
