---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { format } from "timeago.js";

const { title, description, image, time } = Astro.props;
---

<html lang="en" prefix="og: https://ogp.me/ns#">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <BaseHead title={title} image={image} description={description} />
  </head>
  <body>
    <Header />

    {
      title && (
        <div class="w-full py-10 px-4 bg-base-100 border-b border-base-200 mb-8">
          <div class="w-full max-w-none">
            <div class="w-full grid gap-3">
              <h1 class="text-3xl lg:text-5xl font-bold tracking-tight">{title}</h1>
              {time && (
                <>
                  <time
                    class="post-date mt-auto text-sm text-base-content/60"
                    datetime={time}
                  >
                    {format(time)}
                  </time>
                </>
              )}

              {description && (
                <>
                  <p class="text-lg text-base-content/80 max-w-3xl">{description}</p>
                </>
              )}
            </div>
          </div>
        </div>
      )
    }

    <main class="w-full px-4 bg-base-100 min-h-screen max-h-full py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
